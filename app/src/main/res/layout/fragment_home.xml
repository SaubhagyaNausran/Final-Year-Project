<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

                android:background="@color/forground"
            android:elevation="100dp">

                <TextView
                android:id="@+id/textViewDeHaatServices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score My Resume"
                android:textSize="24sp"
                android:textColor="@color/white"

                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/bungee"/>
            </RelativeLayout>





            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"

                android:background="@drawable/blue_gradient_background"

                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:id="@+id/bannerIV"
                    android:src="@drawable/bannerresume"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"


                android:layout_marginTop="-40dp"

                android:background="@color/white"

                android:elevation="15dp"
                >

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TV1"
                    android:text="Know where your resume quality stands amongst others"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:textSize="15sp"
                    android:textColor="@color/gray"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TV2"
                    android:text="Analyze your current resume and get a feedback to make it better"
                    android:textSize="12.5sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_below="@+id/TV1"
                    android:textColor="@color/gray"
                    />


                <View
                    android:layout_width="275dp"
                    android:layout_height="1dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/line1"
                    android:layout_marginTop="10dp"
                    android:background="#BDBDBD"
                    android:layout_below="@id/TV2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TV3"
                    android:text="Upload your resume to evaluate your score"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_below="@+id/line1"
                    android:textColor="@color/gray"
                    />


                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/TV3"
                    android:id="@+id/FM1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/frame_border"
                    android:elevation="2.5dp">

                    <ImageView
                        android:id="@+id/uploadPdf"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/mobileupload" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="75dp"
                        android:layout_marginBottom="10dp"
                        android:text="Mobile Upload"
                        android:textSize="14sp" />
                </FrameLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TV4"
                    android:text="pdf, doc - 2MB max file we support"
                    android:textSize="10sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_below="@+id/FM1"
                    android:textColor="@color/gray"
                    />



            </RelativeLayout>





        </LinearLayout>
    </ScrollView>
</FrameLayout>
